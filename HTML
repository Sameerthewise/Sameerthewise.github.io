    <script>
        const vocabPairs = [
            ["bit", "A binary digit, either 0 or 1."],
            ["byte", "A sequence of 8 bits."],
            ["roundoff", "Error from not enough bits to represent full precision."],
            ["lossless", "Compression that preserves all original data."],
            ["lossy", "Compression that discards some data."],
            ["metadata", "Data about data (e.g., file info)."],
            ["computing device", "A physical device that can run a program."],
            ["bandwidth", "Maximum transmission capacity (bps)."],
            ["protocol", "A set of rules for how devices communicate."],
            ["packet", "Small chunk of data sent over a network."]
        ];

        let gameBoard = document.getElementById("game-board");
        let cards = [];

        vocabPairs.forEach(pair => {
            cards.push({ type: "term", content: pair[0] });
            cards.push({ type: "definition", content: pair[1] });
        });

        // Shuffle
        cards = cards.sort(() => 0.5 - Math.random());

        // Render cards
        cards.forEach((card, index) => {
            let div = document.createElement("div");
            div.classList.add("card");
            div.textContent = card.content;
            div.dataset.index = index;
            div.dataset.type = card.type;
            div.addEventListener("click", handleCardClick);
            gameBoard.appendChild(div);
        });

        let selected = [];
        function handleCardClick() {
            if (this.classList.contains("matched") || selected.includes(this)) return;

            this.style.backgroundColor = "#ffe699";
            selected.push(this);

            if (selected.length === 2) {
                let [first, second] = selected;
                let firstContent = first.textContent;
                let secondContent = second.textContent;

                let match = vocabPairs.find(pair => {
                    return (pair[0] === firstContent && pair[1] === secondContent) ||
                           (pair[0] === secondContent && pair[1] === firstContent);
                });

                if (match) {
                    first.classList.add("matched");
                    second.classList.add("matched");
                } else {
                    setTimeout(() => {
                        first.style.backgroundColor = "";
                        second.style.backgroundColor = "";
                    }, 1000);
                }

                selected = [];
            }
        }
    </script>

